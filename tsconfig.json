{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2015"],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "./dist",
    "newLine": "lf",
    "removeComments": true,
    "resolveJsonModule": true,
    "strict": true,
    "target": "ES5"
  },
  "include": ["./src"],
  "exclude": ["node_modules", "**/*spec.ts"]
}
